.wrap .section-box {
  padding: 10px 15px;
}
.wrap .select-shop {
  background-color: #fff;
  justify-content: center;
  padding: 15px;
  font-size: 15px;
  color: #909193;
  border-radius: 5px;
}
.wrap .select-shop .shop-name {
  margin-top: 5px;
  color: #303133;
}
.wrap .cards .card {
  background: #fff;
  height: 150px;
  border-radius: 15px;
  border: 1px solid #eee;
  justify-content: center;
  align-items: center;
  box-shadow: 5px 5px 2px rgba(0, 0, 0, 0.03);
}
.wrap .coupon {
  padding: 10px 15px;
  height: 50px;
  justify-content: center;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 15px;
  background: #fff;
}

