.warp .userInfo {
  height: 180px;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  justify-content: center;
  align-items: center;
  position: relative;
}
.warp .userInfo .userAvatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
}
.warp .userInfo .nickName {
  margin-top: 5px;
  color: #606266;
  font-size: 14px;
}
.warp .userInfo .finance {
  position: absolute;
  left: 10%;
  width: 80%;
  height: 80px;
  bottom: -55px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.03);
}
.warp .userInfo .finance-item {
  height: 80px;
  justify-content: center;
  align-items: center;
}
.warp .userInfo .finance-item-sub {
  margin-top: 5px;
  font-size: 14px;
  color: #909193;
}
.warp .cell-group {
  background: #fff;
  margin-top: 80px;
}

